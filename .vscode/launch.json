    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Client",
            "url": "http://localhost:43434"
        },
        {
            "name": "Server",
            "program": "${workspaceFolder}/dist/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ],
    "compounds": [
        {
            "name": "Server/Client",
            "configurations": ["Server","Client"],
            "preLaunchTask": "Build Dev"
        }
    ]
}